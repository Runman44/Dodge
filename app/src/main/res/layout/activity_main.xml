<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <nl.sogeti.mranderson.gesturegameapp.GameView
            android:id="@+id/surfaceView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></nl.sogeti.mranderson.gesturegameapp.GameView>

        <RelativeLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/score"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#787878"
                    android:textSize="50sp" />

                <TextView
                    android:id="@+id/best"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Best: 0"
                    android:gravity="center"
                    android:textColor="#ffF44336"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/first"
                android:layout_marginTop="80dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="D"
                    android:textColor="#ffF44336"
                    android:textSize="90sp" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/ball"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:baselineAlignBottom="true"
                    app:cb_color="#FF212121" />

                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="dge"
                    android:textColor="#ffF44336"
                    android:textSize="90sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingTop="130dp">

                <at.markushi.ui.CircleButton
                    android:id="@+id/share"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="true"
                    android:onClick="onShare"
                    android:src="@drawable/ic_share_white_36dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:cb_color="#787878"
                    app:cb_pressedRingWidth="15dip" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/start"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:adjustViewBounds="false"
                    android:onClick="onStart"
                    android:src="@drawable/ic_play_arrow_white_48dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:cb_color="#ffF44336"
                    app:cb_pressedRingWidth="15dip" />

                <at.markushi.ui.CircleButton
                    android:id="@+id/rate"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:adjustViewBounds="false"
                    android:onClick="onStart"
                    android:src="@drawable/ic_favorite_white_36dp"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:cb_color="#787878"
                    app:cb_pressedRingWidth="15dip" />

            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
