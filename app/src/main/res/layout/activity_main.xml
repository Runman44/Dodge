<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <nl.sogeti.mranderson.gesturegameapp.GameView
            android:id="@+id/surfaceView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></nl.sogeti.mranderson.gesturegameapp.GameView>

        <RelativeLayout
            android:id="@+id/overlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#6f000000">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="D"
                android:textColor="@android:color/white"
                android:textSize="90sp" />

            <at.markushi.ui.CircleButton
                android:id="@+id/ball"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cb_color="#FF000000"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="dge"
                android:textColor="@android:color/white"
                android:textSize="90sp" />

            </LinearLayout>


            <at.markushi.ui.CircleButton
                android:id="@+id/start"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:onClick="onStart"
                android:src="@drawable/ic_play_arrow_white_24dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:cb_color="#ffff0000"
                app:cb_pressedRingWidth="15dip" />

            <at.markushi.ui.CircleButton
                android:id="@+id/share"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/start"
                android:adjustViewBounds="false"
                android:onClick="onStart"
                android:src="@drawable/ic_play_arrow_white_24dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:cb_color="#ffff0000"
                app:cb_pressedRingWidth="15dip" />

            <at.markushi.ui.CircleButton
                android:id="@+id/rate"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/start"
                android:adjustViewBounds="false"
                android:onClick="onStart"
                android:src="@drawable/ic_play_arrow_white_24dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                app:cb_color="#ffff0000"
                app:cb_pressedRingWidth="15dip" />

            <!--<at.markushi.ui.CircleButton-->
            <!--android:id="@+id/share"-->
            <!--android:layout_width="70dip"-->
            <!--android:layout_height="70dip"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:src="@drawable/ic_play_arrow_white_24dp"-->
